{
  "name": "md-angular-electron",
  "version": "1.4.2",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build":
      "ng build --prod && cp ./src/electron/entry.js ./dist/ && cp ./src/electron/package.json ./dist/",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron:live":
      "concurrently \"electron ./src/electron/entry.live.js\" \"yarn start\"",
    "electron": "electron dist",
    "dist": "build --win"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.0.3",
    "@angular/common": "^5.0.3",
    "@angular/compiler": "^5.0.3",
    "@angular/core": "^5.0.3",
    "@angular/forms": "^5.0.3",
    "@angular/http": "^5.0.3",
    "@angular/platform-browser": "^5.0.3",
    "@angular/platform-browser-dynamic": "^5.0.3",
    "@angular/platform-server": "^5.0.3",
    "@angular/router": "^5.0.3",
    "arrive": "2.4.1",
    "bootstrap": "3.3.7",
    "bootstrap-material-design": "0.5.10",
    "bootstrap-notify": "3.1.3",
    "chartist": "0.11.0",
    "classlist.js": "^1.1.20150312",
    "concurrently": "^3.5.1",
    "core-js": "^2.5.1",
    "font-awesome": "^4.7.0",
    "googleapis": "^23.0.0",
    "jquery": "3.2.1",
    "material-design-icons": "^3.0.1",
    "moment": "^2.19.2",
    "perfect-scrollbar": "^1.2.0",
    "roboto-fontface": "^0.8.0",
    "rxjs": "^5.5.2",
    "web-animations-js": "^2.3.1",
    "zone.js": "^0.8.18"
  },
  "devDependencies": {
    "@angular/cli": "next",
    "@angular/compiler-cli": "^5.0.3",
    "@types/bootstrap": "^3.3.36",
    "@types/chartist": "^0.9.37",
    "@types/jasmine": "^2.8.2",
    "@types/jquery": "^3.2.16",
    "@types/node": "^8.0.53",
    "codelyzer": "^4.0.1",
    "electron": "^1.7.9",
    "electron-builder": "^19.46.4",
    "jasmine-core": "^2.8.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "1.0.1",
    "karma-coverage-istanbul-reporter": "^1.3.0",
    "karma-jasmine": "1.1.0",
    "karma-jasmine-html-reporter": "0.2.2",
    "protractor": "^5.2.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "typescript": ">=2.4.2 <2.5.0"
  },
  "build": {
    "appId": "com.bcalegaro.md-angular-electron",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis" : {
      "oneClick" : false,
      "allowToChangeInstallationDirectory" : true
    },

    "directories": {
      "output": "release",
      "app": "dist",
      "buildResources": "build"
    }
  }
}
